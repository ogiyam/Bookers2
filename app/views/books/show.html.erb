<h1>Books</h1>

<table>
<thead>
<tr>
<th>Title</th>
<th>Opinion</th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td><%= book.title %></td>
<td><%= book.opinion %></td>
<td>
<%= link_to "Edit", edit_book_path(book.id) %>
<%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "本当に消しますか？" %>
</td>
</tr>
<% end %>
</tbody>
</table>

 <h1>Book detail</h1>
      <table class="table table-user-show">
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>