<div class="notice"><%= flash[:notice] %></div>


<div class="container">
 <div class="row">
  <div class="col-lg-4">
  <table class="table-user">
  <h2>User info</h2>
  <thead>
    <th>
     <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "100x100" %><br>
    </th>
  </thead>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    <tr>
      <th>
         <span class="glyphicon glyphicon-fas fa-user-cog" aria-hidden="true"></span>
        <%= link_to , edit_user_path(current_user), class: "btn btn-outline-secondary btn-block"  %>
      </th>
    </tr>
  </tbody>
 </table>

<h2>New book</h2>
<%= form_with model: @new_book, local:true do |f| %>
  <% if @new_book.errors.any? %>
      <p class="err_head"><%= @new_book.errors.count %> errors prohibited this book from being saved:</p>
      <ul class="err_list">
        <% @new_book.errors.full_messages.each do |messages| %>
          <li><%= messages %></li>
        <% end %>
      </ul>
  <% end %>

    <%= f.label :Title %><br>
    <%= f.text_field :title%><br>

  	<%= f.label :Opinion %><br>
    <%= f.text_area :opinion%><br>

     <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
<% end %>
</div>

<div class="col-lg-8">
 <table class="table book-index">
 <h1>Books</h1>
   <thead>
     <tr>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
     </tr>
   </thead>

   <tbody>
    <% @books.each do |book| %>
      <tr>
         <td>
           <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "50x50" %>
           <% end %>
         </td>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.opinion %></td>
      </tr>
      <% end %>
   </tbody>
 </table>
</div>
</div>
</div>
