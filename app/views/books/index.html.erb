 <table class="table table-user">
  <h2>User info</h2>
  <thead>
    <tr>
      <%= attachment_image_tag @user, :profile_image, :fill, 1, 1, fallback: "no_image.jpg"%>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><% @user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
    <tr>
      <th colspan="2">
        <%= link_to edit_user_path(current_user), class:"btn btn-default btn-block" do %>
      <% end %>
      </th>
    </tr>
  </tbody>
 </table>


<div class="New_book">
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

    <%= f.label :Title %>
    <%= f.text_field :title%>

  	<%= f.label :Opinion %>
